<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef Name="Overclock_GunBase" ParentName="BaseGunWithQuality" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
    </recipeMaker>
    <statBases>
      <Flammability>0</Flammability>
    </statBases>
    <generateCommonality>0</generateCommonality>
  </ThingDef>

  <ThingDef ParentName="Overclock_GunBase">
    <defName>Overclock_UltimateGun</defName>
    <label>星光之铳</label>
    <description>超越级别的武器。</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Overclock/Things/Item/Resource/Weapon/UltimateGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <statBases>
      <WorkToMake>100</WorkToMake>
      <MarketValue>500</MarketValue>
      <Mass>1.5</Mass>
      <AccuracyTouch>10</AccuracyTouch>
      <AccuracyShort>10</AccuracyShort>
      <AccuracyMedium>10</AccuracyMedium>
      <AccuracyLong>10</AccuracyLong>
      <RangedWeapon_Cooldown>0.1</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>Overclock_CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <weaponTags>
      <li>Overclock_UltimateGunTag</li>
    </weaponTags>
    <costList>
      <Steel>100</Steel>
      <Plasteel>50</Plasteel>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>True</hasStandardCommand>
        <defaultProjectile>Overclock_Bullet_Charged</defaultProjectile>
        <warmupTime>0.1</warmupTime>
        <range>200.0</range>
        <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
        <burstShotCount>10</burstShotCount>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>10</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>枪托</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>50</power>
        <cooldownTime>0.2</cooldownTime>
      </li>
      <li>
        <label>枪管</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>50</power>
        <cooldownTime>0.2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Overclock_Bullet_Charged</defName>
    <label>惩罚</label>
    <graphicData>
      <texPath>Things/Projectile/Charge_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>80</damageAmountBase>
      <armorPenetrationBase>100</armorPenetrationBase>
      <speed>400</speed>
    </projectile>
  </ThingDef>
</Defs>
