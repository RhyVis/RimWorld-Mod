<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <DesignatorDropdownGroupDef>
    <defName>Overclock_ThingSpawnerDropdown</defName>
    <label>生成器</label>
  </DesignatorDropdownGroupDef>

  <ThingDef Name="Overclock_ThingSpawnerBase" ParentName="AdaptiveStorageMinifiableBase" Abstract="True">
    <thingClass>Overclock.Building_SpawnThing</thingClass>
    <description>可以自动向容器内补充指定物品。</description>
    <graphicData>
      <texPath>Overclock/Things/Building/Machine/M3</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,2)</drawSize>
      <drawRotated>True</drawRotated>
      <allowFlip>True</allowFlip>
      <damageData>
        <enabled>False</enabled>
      </damageData>
    </graphicData>
    <size>(1, 1)</size>
    <building>
      <maxItemsInCell>1</maxItemsInCell>
    </building>
    <costList>
      <Steel>100</Steel>
      <Plasteel>160</Plasteel>
      <Silver>250</Silver>
      <ComponentSpacer>10</ComponentSpacer>
    </costList>
    <tickerType>Rare</tickerType>
    <statBases>
      <MaxHitPoints>160</MaxHitPoints>
      <Mass>18</Mass>
      <WorkToBuild>1200</WorkToBuild>
    </statBases>
    <designationCategory>Overclock_MainCategory</designationCategory>
    <designatorDropdown>Overclock_ThingSpawnerDropdown</designatorDropdown>
  </ThingDef>

  <ThingDef ParentName="Overclock_ThingSpawnerBase">
    <defName>Overclock_ThingSpawner_HyperMedicine</defName>
    <label>虚无生成器（星辉医药）</label>
    <building>
      <fixedStorageSettings>
        <priority>Critical</priority>
        <filter>
          <thingDefs>
            <li>Overclock_HyperMedicine</li>
          </thingDefs>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Critical</priority>
        <filter>
          <thingDefs>
            <li>Overclock_HyperMedicine</li>
          </thingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
  </ThingDef>

  <AdaptiveStorage.GraphicsDef>
    <defName>Overclock_ThingSpawner_HyperMedicine_Graphics</defName>
    <targetDef>Overclock_ThingSpawner_HyperMedicine</targetDef>
    <showContainedItems>False</showContainedItems>
    <graphics>
      <li>
        <graphicData>
          <texPath>Overclock/Things/Building/Machine/M3</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>(2,2)</drawSize>
          <drawRotated>True</drawRotated>
          <allowFlip>True</allowFlip>
        </graphicData>
      </li>
    </graphics>
  </AdaptiveStorage.GraphicsDef>
</Defs>
